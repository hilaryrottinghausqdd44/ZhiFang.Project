        #region IBLogisticsClientControl 成员

        public string GetClientList_String(Model.LogisticsClientControl l_m)
        {
            DataSet ds=this.GetList(l_m);
            string ClientListStr = "";
            if (ds != null && ds.Tables.Count > 0 && ds.Tables[0].Rows.Count > 0)
            {
                foreach (DataRow dr in ds.Tables[0].Rows)
                {
                    ClientListStr += dr["ClientNo"] + ",";
                }
            }
            if (ClientListStr.Trim().Length > 0)
                ClientListStr = ClientListStr.Substring(0, ClientListStr.Length - 1);
            return ClientListStr;
        }

        public DataSet GetClientList_DataSet(Model.LogisticsClientControl l_m)
        {
            DataSet ds = this.GetList(l_m);
            if (ds != null && ds.Tables.Count > 0 && ds.Tables[0].Rows.Count > 0)
            {
                return ds;
            }
            return new DataSet();
        }

